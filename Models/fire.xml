 <animation>
  <type>select</type>
  <object-name>SmokelessFireHigh</object-name>
  <condition>
   <greater-than>
    <property>/sim/wildfire/fire-lod</property>
    <value>9</value>
   </greater-than>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>SmokelessFireMed</object-name>
  <condition>
   <greater-than>
    <property>/sim/wildfire/fire-lod</property>
    <value>4</value>
   </greater-than>
   <less-than>
    <property>/sim/wildfire/fire-lod</property>
    <value>10</value>
   </less-than>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>SmokelessFireLow</object-name>
  <condition>
