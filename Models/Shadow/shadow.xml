<?xml version="1.0" encoding="UTF-8"?>

<!--
THIS FILE was copied from the Boeing 737-100
    737-100:    http://helijah.free.fr/flightgear/hangar.htm
                embaranger@free.fr
                
and optimized for the A320. Shadow errors:
-   the shadow itself is too small. It needs to be scaled up, so it fits the A320.
-   when the aircraft is flying at a high/low pitch or is rolling over far, the shadow seems to disapear into the ground.
Adaptado por Aurino das Neves
-->

<PropertyList>

  <path>shadow.ac</path>
  <offsets>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>+1.75</z-m>
  </offsets>

  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>shadow</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>shadow</object-name>
  </animation>

  <!-- Une ombre pour OSG en attendant mieux ;) basÃ© sur l'ombre du DC 3-->
  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>shadow</object-name>
    <property>orientation/pitch-deg</property>
    <factor>-1.0</factor><!-- -1.0 -->
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>shadow</object-name>
    <property>orientation/roll-deg</property>
    <factor>1.0</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

        <animation>
            <type>translate</type>
            <object-name>shadow</object-name>
            <property>sim/multiplay/generic/float[2]</property>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>-1</z>
            </axis>
        </animation>


  <!-- Translate to ground level -->
  <animation>
   <type>translate</type>
   <object-name>shadow</object-name>
   <!--property>position/altitude-agl-ft</property-->
   <property>sim/multiplay/generic/float[7]</property>
   <factor>-0.3</factor>
   <center>
     <x-m>0</x-m>
     <y-m>0</y-m>
     <z-m>0</z-m>
   </center>
   <axis>
     <x>0</x>
     <y>0</y>
     <z>1</z>
   </axis>
 </animation>

</PropertyList>

